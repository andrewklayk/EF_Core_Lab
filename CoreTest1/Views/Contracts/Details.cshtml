@model CoreTest1.Models.Contract

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Contract</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата підписання:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SignDate)
        </dd>
        <dt>
            Замовник:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Найменування:</th>
                    <th>Тип:</th>
                    <th width="6">Кількість:</th>
                </tr>
                @foreach (var item in Model.PartsInContr)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Part.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Part.PartType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Part.PartType.Units)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
